<h1>Tasks</h1>

<P><%= notice %><p>
 <ul>
    <% @tasks.each do |task| %>
      <li>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task.id), data: { confirm: 'Are you sure to edit' } %></td>
        <td><%= link_to 'Destroy', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </li>
    <% end %>
  </ul>
 </ul>
<br>
<p><%= link_to 'New Task', new_task_path %></p>
